// NOTE these combos only work with the early_combos branch

// define action names
#define L_VI_D LT(_VI, KC_D)
#define L_MS_E LT(_MS, KC_E)

#define OS_LSA  OSM(MOD_BIT(KC_LSFT) | MOD_BIT(KC_LALT))
#define OS_LSC  OSM(MOD_BIT(KC_LSFT) | MOD_BIT(KC_LCLT))
#define OS_LSG  OSM(MOD_BIT(KC_LSFT) | MOD_BIT(KC_LGUI))
#define OS_LAC  OSM(MOD_BIT(KC_LALT) | MOD_BIT(KC_LCLT))
#define OS_LAG  OSM(MOD_BIT(KC_LALT) | MOD_BIT(KC_LGUI))
#define OS_LCAG OSM(MOD_BIT(KC_LCTL) | MOD_BIT(KC_LALT) | MOD_BIT(KC_LGUI))
#define OS_LCAS OSM(MOD_BIT(KC_LCTL) | MOD_BIT(KC_LALT) | MOD_BIT(KC_LSFT))
#define OS_LCGS OSM(MOD_BIT(KC_LCTL) | MOD_BIT(KC_LGUI) | MOD_BIT(KC_LSFT))
#define OS_HYPR OSM(MOD_BIT(KC_LCTL) | MOD_BIT(KC_LGUI) | MOD_BIT(KC_LALT) | MOD_BIT(KC_LSFT))

// base-layer combos
COMB(BSPCjl,     KC_BSPC,         KC_J, KC_L)
COMB(TABjk,      KC_TAB,          KC_J, KC_K)
COMB(ENTkl,      KC_ENT,          KC_K, KC_L)

// oneshot-mod-key combos
COMB(LAGlscln,   OS_LAG,          KC_L, KC_SCLN)
COMB(HYPRjscln,  OS_HYPR,         KC_J, KC_SCLN) // for alfred clipboard
COMB(LCAGji,     OS_LCAG,         KC_J, KC_I)    // for launching apps

// media keys
COMB(MUTEaf,     KC_MUTE,         KC_A, KC_F)
COMB(PLAYsd,     KC_MPLY,         KC_S, L_VI_D)
COMB(PREVas,     KC_MPRV,         KC_A, KC_S)
COMB(NEXTsd,     KC_MNXT,         L_VI_D, KC_F)
COMB(VOLUef,     KC_VOLU,         L_MS_E, KC_F)
COMB(VOLDdv,     KC_VOLD,         L_VI_D, KC_V)

// useful function keys
COMB(F1fm,       KC_F1,           KC_F, KC_M)
COMB(F2fcomm,    KC_F2,           KC_F, KC_COMM)
COMB(F3fdot,     KC_F2,           KC_F, KC_DOT)
COMB(F4fj,       KC_F4,           KC_F, KC_J)
COMB(F5fk,       KC_F5,           KC_F, KC_K)
COMB(F6fl,       KC_F6,           KC_F, KC_L)
COMB(F7fu,       KC_F7,           KC_F, KC_U)
COMB(F8fi,       KC_F8,           KC_F, KC_I)
COMB(F9fo,       KC_F9,           KC_F, KC_O)
COMB(F10fy,      KC_F10,          KC_F, KC_Y)
COMB(F11fh,      KC_F11,          KC_F, KC_H)
COMB(F12fn,      KC_F12,          KC_F, KC_N)

// layer combo
// vi-layer combos
COMB(BSPCdl,     KC_BSPC,         KC_DOWN, KC_RIGHT)
COMB(TABrd,      KC_TAB,          KC_DOWN, KC_UP)
COMB(ESCpuend,   KC_ESC,          KC_PGUP, KC_END)
COMB(DELpdend,   KC_DEL,          KC_PGDN, KC_END)
COMB(ENTur,      KC_ENT,          KC_UP, KC_RIGHT)
// numpad-layer combos
COMB(BSPCn46,    KC_BSPC,         KC_4, KC_6)
COMB(TABn45,     KC_TAB,          KC_4, KC_5)
COMB(ESCn89,     KC_ESC,          KC_8, KC_9)
COMB(DELn79,     KC_DEL,          KC_7, KC_9)
COMB(ENTn56,     KC_ENT,          KC_5, KC_6)

// layer toggle
TOGG(TOGG_vi,    _VI,             KC_V, KC_L)
TOGG(TOGG_nl,    _NL,             KC_N, KC_L)
TOGG(TOGG_ms,    _MS,             KC_M, KC_L)

